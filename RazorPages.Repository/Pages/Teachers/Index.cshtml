@page
@model RazorPages.Repository.Pages.Teachers.IndexModel

@{
	ViewData["Title"] = "Index";
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Teachers/Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].Age)
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Teacher)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Experience)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>                
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

